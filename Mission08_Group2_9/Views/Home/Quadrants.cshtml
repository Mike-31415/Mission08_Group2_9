                                            <form asp-action="MarkCompleted" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@task.TaskId" />
                                                <button type="submit" class="btn btn-sm btn-success w-100">Complete</button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No tasks in this quadrant</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant 3: Not Important & Urgent -->
        <div class="col-md-6">
            <div class="card border-warning h-100">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Quadrant 3: Not Important & Urgent</h4>
                    <small>Interruptions, Some Phone Calls, Some Mail, Some Reports</small>
                </div>
                <div class="card-body">
                    @if (quadrant3.Any())
                    {
                        <div class="list-group">
