                                        </div>
                                        <div class="btn-group-vertical ms-2" role="group">
                                            <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-primary">Edit</a>
                                            <form asp-action="MarkCompleted" method="post" class="d-inline">
